<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.bodyshapequiz.FifthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/QuestionBackground"
            android:text="@string/hourglass_body_shape_fifth" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/image_view_hourglass"
                style="@style/ImageBodyShape"
                android:layout_weight="1"
                android:contentDescription="@string/image_descr_hourglass"
                android:src="@drawable/hourglass_body_shape" />

            <TextView
                android:id="@+id/text_view_tops_hourglass"
                style="@style/SmallTextBoxes"
                android:layout_toRightOf="@id/image_view_hourglass"
                android:text="@string/hourglass_tops" />

            <TextView
                android:id="@+id/text_view_bottoms_hourglass"
                style="@style/SmallTextBoxes"
                android:layout_below="@id/text_view_tops_hourglass"
                android:layout_toRightOf="@id/image_view_hourglass"
                android:text="@string/hourglass_bottoms" />

            <TextView
                style="@style/SmallTextBoxes"
                android:layout_below="@+id/text_view_bottoms_hourglass"
                android:layout_toRightOf="@id/image_view_hourglass"
                android:text="@string/hourglass_shoes" />

        </RelativeLayout>

        <Button
            style="@style/FindOutMoreButton"
            android:text="@string/find_out_more_button" />
    </LinearLayout>
</ScrollView>