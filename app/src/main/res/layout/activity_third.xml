<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.bodyshapequiz.ThirdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/QuestionBackground"
            android:text="@string/inverted_triangle_body_shape_third" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_inverted_triangle"
                style="@style/ImageBodyShape"
                android:layout_weight="1"
                android:contentDescription="@string/image_descr_inverted_triangle_female"
                android:src="@drawable/inverted_triangle_body_shape" />

                <TextView
                    android:id="@+id/text_view_tops_inv_triangle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/image_view_inverted_triangle"
                    android:padding="10dp"
                    android:text="@string/inverted_triangle_tops"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_view_bottoms_inv_triangle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_view_tops_inv_triangle"
                    android:layout_toRightOf="@id/image_view_inverted_triangle"
                    android:padding="5dp"
                    android:text="@string/inverted_triangle_bottoms"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_view_bottoms_inv_triangle"
                    android:layout_toRightOf="@id/image_view_inverted_triangle"
                    android:padding="5dp"
                    android:text="@string/inverted_triangle_shoes"
                    android:textSize="18sp" />

        </RelativeLayout>

        <Button
            style="@style/FindOutMoreButton"
            android:text="@string/find_out_more_button" />
    </LinearLayout>
</ScrollView>